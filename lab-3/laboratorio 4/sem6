//inicializacion
#include <iostream>

using namespace std;

int main(){
    int arr [4];
    cout << "por favor ingrese 4 valores "<< endl;

    for (int i=0;i <4;i++)
        cin >> arr [i];
    cout<<"los valores del arreglo son ";
    for (int i =0;i < 4; i++)
      cout << " "<< endl;
    cout << endl;
    return 0;
}

