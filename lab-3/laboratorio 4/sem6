//funcion con arreglo

 #include <iostream>
using namespace std;

int sumar (const int arr[],const int tam ){
long sum {0};
int i =0;
while(i < tam){
//for(int i =0;i < tan ;sum += arr [i++]);
sum += arr [i++];
}
return sum;
}

int main(){
    int arr [4];
    cout << "por favor ingrese 4 valores "<< endl;

    for (int i=0;i <4;i++)
        cin >> arr [i];
    cout<< sumar (arr,4) << endl;

    return 0;
}

//recur_suma


 #include <iostream>
using namespace std;

int sumar (const int arr[],const int tam ){
long sum {0};
int i =0;
while(i < tam){
//for(int i =0;i < tan ;sum += arr [i++]);
sum += arr [i++];
}
return sum;
}


int recur_suma(const int arr[], int tam){
    if (tam<0){
        return 0;
    }else{
        return arr[tam-1]+ recur_suma(arr,tam-1);
    }

}
int main(){
    int arr [4];
    cout << "por favor ingrese 4 valores "<< endl;

    for (int i=0;i <4;i++)
        cin >> arr [i];
    cout<< sumar (arr,4) << endl;
    cout<< recur_suma (arr,4) << endl;

    return 0;
}

// recur_2

#include <iostream>
using namespace std;

int sumar (const int arr[],const int tam ){
	long sum {0};
	int i =0;
	while(i < tam){
		//for(int i =0;i < tan ;sum += arr [i++]);
		sum += arr [i++];
	}
	return sum;
}
	
	
int recur_suma(const int arr[], int tam){
	if (tam<=0){
		return 0;
	}else{
		return arr[tam-1] + recur_suma(arr,tam-1);
	}
		
}
	
void imprimir(const int arr[],int tam){
	for (int i=0; i < tam;i++){
	   cout << " " << arr [i];
	}

}

	
void imprimir_recur(const int arr[],int tam ){
	if (tam==0){
		return 0;
		
	}else{
		cout << arr[tam-1];
                imprimir_recur(arr[],int tam-1 );
	}
}
int main(){
	int arr [4];
	int tam=4;
	cout << "por favor ingrese 4 valores "<< endl;
			
	for (int i=0;i <tam;i++)
		cin >> arr [i];
	cout<<"la suma es "<< sumar (arr,tam) << endl;
	cout<<"la suma recursiva es "<< recur_suma (arr,tam) << endl;
			
	imprimir(arr,tam);
	return 0;
}




// arreglos2
/**
 * implemente una funcion que reciba un arreglo de enteros y su tamaÃ±o e invierta los elementos
*/


#include <iostream>

using namespace std;

void intercambio(int &a, int &b){
    int ai=0;
    ai=a;
    a=b;
    b=ai;
}
void invertir(int arr[],int tam){
        for (int i =0; i < tam /2; i++){
            int temporal=arr[i];
            arr[i]= arr[tam-i-1];
            arr[tam-i-1]=temporal;
        }
}
void imvertirrec(int arr[], int tam, int temporal=0){
    if(temporal>tam)
        return;      
        
        imvertirrec(arr,tam -1,temporal+1);
}   

void imprimir(const int arr[],int tam){
	for (int i=0; i < tam;i++){
	   cout << " " << arr [i];
	}

}

int main(){
    int tam =5;
    int arr[5]={1,1,2,2,1};
    
    invertir (arr, tam);
    cout<<endl;
    
    imvertirrec(arr, tam);
    imprimir(arr, tam);
    return 0;
}
