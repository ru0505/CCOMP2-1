//funcion con arreglo

 #include <iostream>
using namespace std;

int sumar (const int arr[],const int tam ){
long sum {0};
int i =0;
while(i < tam){
//for(int i =0;i < tan ;sum += arr [i++]);
sum += arr [i++];
}
return sum;
}

int main(){
    int arr [4];
    cout << "por favor ingrese 4 valores "<< endl;

    for (int i=0;i <4;i++)
        cin >> arr [i];
    cout<< sumar (arr,4) << endl;

    return 0;
}

//recur_suma


 #include <iostream>
using namespace std;

int sumar (const int arr[],const int tam ){
long sum {0};
int i =0;
while(i < tam){
//for(int i =0;i < tan ;sum += arr [i++]);
sum += arr [i++];
}
return sum;
}


int recur_suma(const int arr[], int tam){
    if (tam<0){
        return 0;
    }else{
        return arr[tam-1]+ recur_suma(arr,tam-1);
    }

}
int main(){
    int arr [4];
    cout << "por favor ingrese 4 valores "<< endl;

    for (int i=0;i <4;i++)
        cin >> arr [i];
    cout<< sumar (arr,4) << endl;
    cout<< recur_suma (arr,4) << endl;

    return 0;
}

// recur_2

#include <iostream>
using namespace std;

int sumar (const int arr[],const int tam ){
	long sum {0};
	int i =0;
	while(i < tam){
		//for(int i =0;i < tan ;sum += arr [i++]);
		sum += arr [i++];
	}
	return sum;
}
	
	
int recur_suma(const int arr[], int tam){
	if (tam<=0){
		return 0;
	}else{
		return arr[tam-1] + recur_suma(arr,tam-1);
	}
		
}
	
void imprimir(const int arr[],int tam){
	for (int i=0; i < tam;i++){
	   cout << " " << arr [i];
	}

}

	
void imprimir_recur(const int arr[],int tam ){
	if (tam<0){
		return 0;
		
	}else{
		return arr[tam-1] + imprimir_recur(const int arr[],int tam-1 )
	}
}
int main(){
	int arr [4];
	int tam=4;
	cout << "por favor ingrese 4 valores "<< endl;
			
	for (int i=0;i <tam;i++)
		cin >> arr [i];
	cout<<"la suma es "<< sumar (arr,tam) << endl;
	cout<<"la suma recursiva es "<< recur_suma (arr,tam) << endl;
			
	imprimir(arr,tam);
	return 0;
}
